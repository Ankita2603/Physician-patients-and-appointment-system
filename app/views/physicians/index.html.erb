<% if current_physician %>
  Logged in as <%= current_physician.email %>.
  <%= link_to 'Log Out', new_session_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or 
  <%= link_to 'Log In', login_path %>
<% end %>
<p id=”notice”><%= notice %></p>

<div class= "container-fluid">
	<h1 class= "text-center mt-4 font-weight-bold">Physician Details</h1>
	<table class= "table table-striped">
			<thead class= "thead-dark">
					<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Department</th>
							<th>Show Appointment</th>
							<th colspan="3">Action</th>
					</tr>
			</thead>
			<tbody>
					<% @physicians.each do |physician| %>
							<tr>
									<% if session[:physician_id] == physician.id%>
											<td><%= physician.name %></td>
											<td><%= physician.email %></td>
											<td><%= physician.department %></td>
											<td><%= link_to 'Show appointments', physicians_appointments_path(physician) %>
											<td><%= link_to 'Show', physician %></td> 
											<td><%= link_to 'Edit', edit_physician_path(physician) %></td> 
											<td><%= link_to 'Destroy', physician, method: :delete, data: {confirm: 'Are you sure?'} %></td>
									<% end %>
							</tr>
					<% end %>
			</tbody>
	</table>
</div>
<br>
