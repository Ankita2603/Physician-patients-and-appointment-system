<div class= "container-fluid">
	<h1 class= "text-center mt-4 font-weight-bold">Appointment Details</h1>
	<%= link_to 'New Appointment', new_patient_appointment_path(@patient), class: "font-weight-bold" %>
	<%= link_to 'Back', patients_path %>
	<table class= "table table-striped">
		<thead class= "thead-dark">
			<tr>
				<th>Appointment Date</th>
				<th>Physician Name</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @appointments.each do |appointment| %>
				<tr>
					<td><%= appointment.appointment_date %></td>
					<td><%= appointment.physician.name %></td>
					<td><%= link_to 'Show', patient_appointment_path(@patient, appointment) %></td> 
					<td><%= link_to 'Edit', edit_patient_appointment_path(@patient, appointment) %></td> 
					<td><%= link_to 'Destroy', patient_appointment_path(@patient, appointment), method: :delete, data: {confirm: 'Are you sure?'} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
