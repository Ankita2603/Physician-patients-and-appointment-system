<%= form_for @patient do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p> 
	<p>
		<%= f.label :phone_number %><br>
		<%= f.text_field :phone_number %>
    </p> 
    <p>
		<%= f.label :age %><br>
		<%= f.text_field :age %>
	</p> 
	<p>
		<%= f.label :address %><br>
		<%= f.text_area :address %>
	</p> 
	<p>
		<%= f.submit %>
	</p>
<% end %>
