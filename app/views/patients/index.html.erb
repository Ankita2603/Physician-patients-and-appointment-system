<% if current_patient %>
  Logged in as <%= current_patient.email %>.
  <%= link_to 'Log Out', new_session_path %>
<% else %>
  <%= link_to 'Sign Up', signup_path %> or 
  <%= link_to 'Log In', login_path %>
<% end %>
<p id=”notice”><%= notice %></p>

<div class= "container-fluid">
	<h1 class= "text-center mt-4 font-weight-bold">Patients Details</h1>
	<table class= "table table-striped">
		<thead class= "thead-dark">
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Phone Number</th>
				<th>Age</th>
				<th>Address</th>
				<th>Physician Appointments</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @patients.each do |patient| %>
				<tr>
					<% if session[:patient_id] == patient.id %>
						<td><%= patient.name %></td>
						<td><%= patient.email %></td>
						<td><%= patient.phone_number %></td>
						<td><%= patient.age %></td>
						<td><%= patient.address %></td>
						<td><%= link_to 'Appointments', patient_appointments_path(patient) %>
						<td><%= link_to 'Show', patient %></td> 
						<td><%= link_to 'Edit', edit_patient_path(patient) %></td> 
						<td><%= link_to 'Destroy', patient, method: :delete, data: {confirm: 'Are you sure?'} %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
